#WAP to replace every "a" in a file with "*"

f=open("D:\\AIML\\pyhton\\programs\\day 9\\file handling\\new file.txt","r")


s=f.read()

s1=""

for i in range(len(s[i])):
    if s[i]=="a":
        s1=s1+"*"
    else:
        s1=s1+s[i]
f.close()



g=open("D:\\AIML\\pyhton\\programs\\day 9\\file handling\\new file.txt","w")
g.write(s1)
gclose()
